@page "/"
@using Blazorise
@using Blazorise.Bootstrap
@using Blazorise.Icons.FontAwesome

<div class="container-fluid">
    <div class="carousel-container">
        <div class="carousel-overlay">
            <div class="carousel-text text-center">
                <p class="overlay-text">Welcome to Misa's</p>
                <p class="home-sub-text">Authentic, hand-crafted Thai street food <span class="delivery-text">delivered to your door</span> .</p>
                <a href="/Menu" class="button image-button">See our Menu</a>
            </div>
        </div>
        <div id="foodCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/Resources/Images/Food/The Platter.jpg" alt="Sai Oua Sausage" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/Resources/Images/Food/sai-oua.jpg" alt="Sai Oua Sausage" />
                </div>
            </div>
        </div>
    </div>
</div>

