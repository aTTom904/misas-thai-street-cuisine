@page "/Gallery"
@using Microsoft.AspNetCore.Components.Web

<div class="container">
    <h2 class='page-header-text'>See for Yourself</h2>

    <div class="gallery">
        @foreach (var image in Images)
        {
            <img src="@image" class="gallery-item" />
        }
    </div>
</div>

