        "Resources/Images/Gallery/frozen-platter.jpg",
        "Resources/Images/Gallery/herbs.png",
        "Resources/Images/Gallery/spices.png"
        // Add more images as needed
    };

    protected override void OnInitialized()
    {
        // Images are now hardcoded above
        // In the future, you could load these from a JSON file using HttpClient
    }
}
