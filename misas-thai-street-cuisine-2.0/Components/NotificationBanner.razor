@using misas_thai_street_cuisine_2._0.Data

<div class="notification-overlay" @onclick="OnDismiss">
    <div class="notification-banner" @onclick:stopPropagation>
        @if (NotificationData.IsDismissable)
        {
            <button class="notification-close" @onclick="OnDismiss" aria-label="Close notification">&times;</button>
        }
        <div class="notification-icon">
            <i class="@NotificationData.IconClass"></i>
        </div>
        <h2 class="notification-title">@NotificationData.Title</h2>
        <p class="notification-message">@NotificationData.Message</p>
        <div class="notification-socials">
            <p class="socials-label">Follow us for updates</p>
            <div class="socials-links">
                <a href="https://www.facebook.com/misasthaistreetcuisine" target="_blank" rel="noopener" class="social-link" aria-label="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://www.instagram.com/misasthaistreetcuisine/" target="_blank" rel="noopener" class="social-link" aria-label="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="mailto:msthaistreetcuisine@gmail.com" class="social-link" aria-label="Email">
                    <i class="fas fa-envelope"></i>
                </a>
            </div>
        </div>
        <button class="notification-dismiss-btn" @onclick="OnDismiss">Got It</button>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnDismiss { get; set; }
}
