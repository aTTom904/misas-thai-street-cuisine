@using misas_thai_street_cuisine_2._0.Models
@inject ShoppingCartService Cart

@namespace misas_thai_street_cuisine_2._0.Components.CartMenuItem
<div class="cart-menu-item">
    @if (MenuItem != null)
    {
        <div class="cart-menu-img-block">
            <img src="@MenuItem.ImageUrl" alt="@MenuItem.Name" class="cart-menu-img" />
        </div>
        <div class="cart-menu-content">
            <h2 class="cart-menu-title">@MenuItem.Name</h2>
            @* <div class="cart-menu-desc">@MenuItem.Description</div> *@
            @if (MenuItem is Platter platter)
            {
                @* <div class="menu-item-includes">
                    <span style="font-weight:bold;">Starting from </span>
                    @if (platter.Includes != null && platter.Includes.Count > 0)
                    {
                        <span> @string.Join(" \u2022 ", platter.Includes)</span>
                    }
                </div>
                @if (platter.AddOns != null && platter.AddOns.Count > 0)
                {
                    <ul class="menu-item-addons">
                        <div><strong>Served with:</strong></div>
                        @foreach (var addon in platter.AddOns)
                        {
                            <li>@addon</li>
                        }
                    </ul>
                } *@
                <div class="cart-menu-cart-section">
                    @foreach (var serve in platter.Serves)
                    {
                        var match = Cart.Items.FirstOrDefault(i => i.Item.Name == platter.Name && i.SelectedServes == serve);
                        if (match != null && match.Quantity > 0)
                        {
                            <div class="serving-row">
                                <div class="cart-row">
                                    <span class="cart-label">Serves @serve</span>
                                    <span class="cart-price">$@platter.Prices[serve]</span>
                                    <button class="cart-btn" @onclick="async () => await ChangeCartItemQty(match, -1)">−</button>
                                    <span class="cart-qty">@match.Quantity</span>
                                    <button class="cart-btn" @onclick="async () => await ChangeCartItemQty(match, 1)">+</button>
                                </div>
                                <div class="portion-guide">
                                    <span>@platter.Includes[serve]</span>
                                </div>
                                @if (serve == 2)
                                {
                                    <div class="cart-upgrade-row">
                                        <span class="cart-upgrade-label"><b>Upgrade:</b> 24 oz Phad Thai - <b>add $9</b></span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeUpgradeQty(match, 2, -1)">−</button>
                                        <span class="cart-qty">@match.UpgradePhadThai24Qty</span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeUpgradeQty(match, 2, 1)">+</button>
                                    </div>
                                }
                                @if (serve == 4)
                                {
                                    <div class="cart-upgrade-row">
                                        <span class="cart-upgrade-label"><b>Upgrade:</b> 48 oz Phad Thai - <b>add $18</b></span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeUpgradeQty(match, 4, -1)">−</button>
                                        <span class="cart-qty">@match.UpgradePhadThai48Qty</span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeUpgradeQty(match, 4, 1)">+</button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            }
            else if (MenuItem is Tray tray)
            {
                <div class="cart-menu-cart-section">
                    @foreach (var size in tray.Size)
                    {
                        var match = Cart.Items.FirstOrDefault(i => 
                            i.Item.Name == tray.Name && 
                            i.SelectedSize != null && 
                            i.SelectedSize == size);
                        if (match != null && match.Quantity > 0)
                        {
                            <div class="serving-row">
                                <div class="cart-row">
                                    <span class="cart-label">@size Tray</span>
                                    <span class="cart-price">$@tray.Prices[size]</span>
                                    <button class="cart-btn" @onclick="async () => await ChangeCartItemQty(match, -1)">−</button>
                                    <span class="cart-qty">@match.Quantity</span>
                                    <button class="cart-btn" @onclick="async () => await ChangeCartItemQty(match, 1)">+</button>
                                </div>
                                <div class="portion-guide">
                                    <span>@tray.Includes[size] - Serves @tray.Serves[size]</span>
                                </div>
                                @* Add-on sauces based on tray name *@
                                @if (tray.Name == "Sai Ua Sausage")
                                {
                                    var saucePrice = size == "Half" ? 15 : 25;
                                    <div class="cart-upgrade-row">
                                        <span class="cart-upgrade-label"><b>Add:</b> Prik Noom Sauce - <b>$@saucePrice</b></span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeTrayAddOn(match, -1)">−</button>
                                        <span class="cart-qty">@match.AddOnQty</span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeTrayAddOn(match, 1)">+</button>
                                    </div>
                                }
                                else if (tray.Name == "Chicken Skewers" || tray.Name == "Thai Style Wings")
                                {
                                    var saucePrice = size == "Half" ? 15 : 25;
                                    <div class="cart-upgrade-row">
                                        <span class="cart-upgrade-label"><b>Add:</b> Jao Sauce - <b>$@saucePrice</b></span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeTrayAddOn(match, -1)">−</button>
                                        <span class="cart-qty">@match.AddOnQty</span>
                                        <button class="cart-upgrade-btn" @onclick="async () => await ChangeTrayAddOn(match, 1)">+</button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            }
            else if (MenuItem is SideDish side)
            {
                var match = Cart.Items.FirstOrDefault(i => i.Item.Name == side.Name);
                if (match != null && match.Quantity > 0)
                {
                    <div class="cart-menu-price">$@side.Price</div>
                    <div class="cart-row">
                        <span class="cart-label">@side.Name</span>
                        <span class="cart-price">$@side.Price</span>
                        <button class="cart-btn" @onclick="async () => await ChangeCartItemQty(match, -1)">−</button>
                        <span class="cart-qty">@match.Quantity</span>
                        <button class="cart-btn" @onclick="async () => await ChangeCartItemQty(match, 1)">+</button>
                    </div>
                }
            }
        </div>
    }
    @ChildContent
</div>

@code {
    [Parameter] public MenuItem? MenuItem { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnCartChanged { get; set; }

    private async Task ChangeCartItemQty(CartItem match, int delta)
    {
        if (delta == 0 || match == null) return;
        if (delta > 0)
        {
            // Increment quantity, preserve upgrades/add-ons
            if (match.Item is Platter)
            {
                await Cart.AddItemAsync(new CartItem(match.Item, match.Quantity + 1, match.SelectedServes, match.UpgradePhadThai24Qty, match.UpgradePhadThai48Qty));
            }
            else if (match.Item is Tray tray && match.SelectedSize != null)
            {
                await Cart.AddItemAsync(new CartItem(tray, match.Quantity + 1, match.SelectedSize, match.AddOnQty));
            }
            else
            {
                // Side dish or other
                await Cart.AddItemAsync(new CartItem(match.Item, match.Quantity + 1));
            }
        }
        else if (delta < 0)
        {
            await Cart.RemoveItemAsync(match);
        }
        await OnCartChanged.InvokeAsync();
    }

    private async Task ChangeUpgradeQty(CartItem match, int serve, int delta)
    {
        if (match == null || delta == 0) return;
        int parentQty = match.Quantity;
        if (serve == 2 && parentQty > 0)
        {
            int newQty = Math.Max(0, Math.Min(parentQty, match.UpgradePhadThai24Qty + delta));
            await Cart.AddItemAsync(new CartItem(match.Item, match.Quantity, match.SelectedServes, newQty, match.UpgradePhadThai48Qty));
        }
        else if (serve == 4 && parentQty > 0)
        {
            int newQty = Math.Max(0, Math.Min(parentQty, match.UpgradePhadThai48Qty + delta));
            await Cart.AddItemAsync(new CartItem(match.Item, match.Quantity, match.SelectedServes, match.UpgradePhadThai24Qty, newQty));
        }
        await OnCartChanged.InvokeAsync();
    }

    private async Task ChangeTrayAddOn(CartItem match, int delta)
    {
        if (match == null || delta == 0 || match.SelectedSize == null) return;
        if (match.Item is not Tray tray) return;
        int parentQty = match.Quantity;
        if (parentQty > 0)
        {
            int newAddOnQty = Math.Max(0, Math.Min(parentQty, match.AddOnQty + delta));
            await Cart.AddItemAsync(new CartItem(tray, match.Quantity, match.SelectedSize, newAddOnQty));
        }
        await OnCartChanged.InvokeAsync();
    }
}
